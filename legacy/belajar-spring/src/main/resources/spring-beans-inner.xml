<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean id="customerBean" class="com.paralun.app.bean.CustomerInnerBean">
        <property name="person">
            <bean class="com.paralun.app.bean.PersonInnerBean">
                <property name="nama" value="Ridwan" />
                <property name="alamat" value="Bandung" />
                <property name="umur" value="25" />
            </bean>
        </property>
    </bean>
</beans>
